<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activity.ShowContactActivity"
    tools:showIn="@layout/activity_show_contact">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/show_contact_name_text_view"
        style="@style/details_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/contact_name_divider"
        style="@style/details_divider_full"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/show_contact_name_text_view" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/show_contact_address_text_view"
        style="@style/details_text_with_drawable"
        android:drawableStart="@drawable/ic_location_black_o54_24dp"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contact_name_divider" />

    <View
        android:id="@+id/contact_detail_divider"
        style="@style/details_divider_indent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/show_contact_address_text_view" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/show_contact_mail_text_view"
        style="@style/details_text_with_drawable"
        android:drawableStart="@drawable/ic_mail_black_o54_24dp"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contact_detail_divider" />

    <View
        android:id="@+id/contact_detail_divider2"
        style="@style/details_divider_indent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/show_contact_mail_text_view" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/show_contact_phone_text_view"
        style="@style/details_text_with_drawable"
        android:drawableStart="@drawable/ic_local_phone_black_o54_24dp"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contact_detail_divider2" />

    <View
        android:id="@+id/contact_detail_divider3"
        style="@style/details_divider_indent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/show_contact_phone_text_view" />

</androidx.constraintlayout.widget.ConstraintLayout>